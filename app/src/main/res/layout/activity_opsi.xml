<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55736B"
    tools:context=".Opsi">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:backgroundTint="@drawable/absensi"
            app:srcCompat="@drawable/absensi_removebg_preview"
            tools:layout_editor_absoluteX="64dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="269dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:backgroundTint="@drawable/absensi"
            app:srcCompat="@drawable/absensi_removebg_preview__1_"
            tools:layout_editor_absoluteX="64dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="269dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:backgroundTint="@drawable/absensi"
            app:srcCompat="@drawable/listhistory_removebg_preview"
            tools:layout_editor_absoluteX="64dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="269dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>